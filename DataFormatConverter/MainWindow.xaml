<Window x:Class="DataFormatConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataFormatConverter"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="450" ResizeMode="NoResize">
    <Grid>
        <Button Name="readFileBtn" HorizontalAlignment="Left" Margin="63,280,0,88" Width="325" Click="ReadFileBtn_Click"  FontSize="18" >
            Read File
        </Button>
        <Button Name="SaveFileBtn" HorizontalAlignment="Left" Margin="63,347,0,0" VerticalAlignment="Top" Width="325" Height="50" Click="SaveFileBtn_Click" FontSize="18">
            Save converted File
        </Button>
        <Grid Margin="10,38,10,185">
            <ScrollViewer>
                <TextBlock Name="MainTextBlock"  HorizontalAlignment="Center" Height="auto" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="383" FontFamily="Courier New" FontSize="18"/>
            </ScrollViewer>
        </Grid>

    </Grid>
</Window>
